<%= form_tag login_path, method: :post do %>
  <div class="form-group">
    <label>Email</label>
    <%= text_field_tag :email,
                       @email,
                       type: 'email',
                       class: 'form-control',
                       style: 'width: 200px',
                       required: true %>
  </div>
  <div class="form-group">
    <label>Password</label>
    <%= text_field_tag :password,
                       @password,
                       type: 'password',
                       class: 'form-control',
                       style: 'width: 200px',
                       required: true %>
  </div>
  <%= submit_tag 'Đăng nhập', class: 'btn btn-success' %>
<% end %>